{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["app/shared/src/*"],
      "@libs/*": ["app/shared/libs/*"],
      "@types/*": ["app/shared/types/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules"]
}
